<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgWhite"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFF6F8F7"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="@string/settings_subtitle_security"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_backup_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="40dp"
                android:background="@drawable/settings_items"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:visibility="gone"
                android:stateListAnimator="@null"
                android:text="@string/backup_wallet"
                android:textColor="@color/mainText"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_restore_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:height="40dp"
                android:background="@drawable/settings_items"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:stateListAnimator="@null"
                android:text="@string/restore_wallet"
                android:textColor="@color/mainText"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_export_pub_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:height="40dp"
                android:background="@drawable/settings_items"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:stateListAnimator="@null"
                android:text="@string/settings_export_pub_key"
                android:textColor="@color/mainText"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_sweep_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="40dp"
                android:background="@drawable/settings_items"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:stateListAnimator="@null"
                android:text="@string/settings_sweep_wallet"
                android:textColor="@color/mainText"
                android:textSize="16sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_import_xpub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="40dp"
                android:background="@drawable/settings_items"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:visibility="gone"
                android:stateListAnimator="@null"
                android:text="@string/settings_import_xpub"
                android:textColor="@color/mainText"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_change_pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="40dp"
                android:background="@drawable/settings_items"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:stateListAnimator="@null"
                android:text="@string/change_pincode"
                android:textColor="@color/mainText"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_change_node"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="40dp"
                android:background="@drawable/settings_items"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:stateListAnimator="@null"
                android:text="@string/settings_change_trusted_node"
                android:textColor="@color/mainText"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_reset_blockchain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="40dp"
                android:background="@drawable/settings_item_blank"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:stateListAnimator="@null"
                android:text="@string/settings_reset_blockchain"
                android:textColor="@color/mainText"
                android:textSize="16sp" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFF6F8F7"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="@string/settings_subtitle_preference"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">


            <Switch
                android:id="@+id/videoSwitch"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/settings_items"
                android:checked="true"
                android:visibility="gone"
                android:gravity="left"
                android:padding="8dp"
                android:text="Splash video sound"
                android:textColor="@color/mainText"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <Button
                    android:id="@+id/btn_rates"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:height="40dp"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:padding="0dp"
                    android:stateListAnimator="@null"
                    android:text="@string/settings_rates"
                    android:textColor="@color/mainText"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_rates"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="0dp"
                    android:textColor="@color/mainText"
                    android:textSize="16sp"
                    tools:text="USD" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFF6F8F7"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="@string/settings_subtitle_about"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_tutorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="40dp"
                android:background="@drawable/settings_items"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:visibility="gone"
                android:stateListAnimator="@null"
                android:text="@string/tutorial"
                android:textColor="@color/mainText"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="40dp"
                android:background="@drawable/settings_items"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:visibility="gone"
                android:stateListAnimator="@null"
                android:text="@string/network_monitor"
                android:textColor="@color/mainText"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="40dp"
                android:background="@drawable/settings_items"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:stateListAnimator="@null"
                android:text="@string/settings_report"
                android:textColor="@color/mainText"
                android:textSize="16sp" />


            <Button
                android:id="@+id/btn_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="40dp"
                android:background="@drawable/settings_items"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:stateListAnimator="@null"
                android:text="@string/settings_support"
                android:textColor="@color/mainText"
                android:textSize="16sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:paddingBottom="40dp"
            android:paddingTop="40dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_network_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF666666"
                    android:text="@string/text_version" />

                <TextView
                    android:id="@+id/app_version"
                    android:layout_width="wrap_content"
                    android:textColor="#FF666666"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_about"
                    android:layout_width="wrap_content"
                    android:textColor="#FF666666"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>
</ScrollView>