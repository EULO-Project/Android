<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgWhite"
    android:orientation="vertical">

    <fragment
        android:id="@+id/fragment_amount"
        android:name="com.ulo.wallet.ui.main.AmountInputFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">


        <TextView
            android:id="@+id/titleDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="12dp"
            android:text="@string/title_description"
            android:textColor="#757575"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edit_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/transaction_inputs"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:hint="@string/set_description"
            android:padding="8dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#434343"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="17.5sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/btnRequest"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_button"
            android:elevation="2dp"
            android:gravity="center"
            android:text="@string/btn_request"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="@string/fee_included" />

    </LinearLayout>


</LinearLayout>