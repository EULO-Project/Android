<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            android:src="@mipmap/img_header_logo" />

        <TextView
            android:id="@+id/txt_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Wallet"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFC7CDD6"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
           >

            <TextView
                android:id="@+id/txt_sync_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#99ffffff"
                android:textSize="13sp"
                tools:text="Sync" />

            <ImageView
                android:id="@+id/img_sync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="7dp"
                android:src="@drawable/ic_header_unsynced" />

        </LinearLayout>
    </LinearLayout>

    <RadioGroup
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_nav_wallet"
            style="@style/TabRadioButton"
            android:layout_height="42dp"
            android:background="@drawable/bg_tab_menu"
            android:drawableLeft="@drawable/tab_menu_wallet_style"
            android:orientation="horizontal"
            android:text="@string/my_wallet" />


        <RadioButton
            android:id="@+id/rb_nav_address"
            style="@style/TabRadioButton"
            android:layout_height="42dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_tab_menu"
            android:drawableLeft="@drawable/tab_menu_address_style"
            android:orientation="horizontal"
            android:text="@string/address_book_screen_title" />


        <RadioButton
            android:id="@+id/rb_nav_settings"
            style="@style/TabRadioButton"
            android:layout_height="42dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_tab_menu"
            android:drawableLeft="@drawable/tab_menu_setting_style"
            android:orientation="horizontal"
            android:text="@string/settings_screen_title" />

    </RadioGroup>

</LinearLayout>
